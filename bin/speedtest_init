#!/usr/bin/env ruby

require 'fileutils'
require 'optparse'
require_relative '../lib/speed_test'

@custom = {}

OptionParser.new do |opt|
  opt.on('-o', '--output PATH', String, 'specify path to output directory') do |path|
    @custom[:output] = path
  end
end.parse!

SpeedTest::Setup.new(base_dir: Dir.pwd, custom: @custom).directories
