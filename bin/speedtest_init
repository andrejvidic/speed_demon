#!/usr/bin/env ruby

require 'fileutils'

dirs = ['speedtest', 'speedtest/output', 'speedtest/cron_logs']
dirs.each do |dir|
  base = Dir.pwd
  path = File.join(base, dir)

  if Dir.exist?(path)
    warn "#{dir} exists, not created"
  else
    puts "[add] `#{path}'"
    FileUtils.mkdir_p(path)
  end
end